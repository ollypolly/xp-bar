{
  "manifest_version": 3,
  "name": "Short Form Content XP Bar",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html",
    "default_title": "Open Extension App"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content_scripts/content_script.tsx"]
    }
  ],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "permissions": [
    "background",
    "contextMenus",
    "bookmarks",
    "tabs",
    "storage",
    "history"
  ]
}
